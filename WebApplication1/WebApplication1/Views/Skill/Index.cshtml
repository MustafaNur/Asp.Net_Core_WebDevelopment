@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yetenekler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Oran</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        <td>@item.SkillID</td>
        <td>@item.Title</td>
        <td>@item.Value</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">sil</a></td>
            <td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-outline-warning">Düzenle</a></td>
    </tr>
    }
    
</table>
<a href="/Skill/AddSkill/" class="btn btn-primary">Yeni Yetenek Ekle</a>
