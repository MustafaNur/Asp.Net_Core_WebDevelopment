@using EntityLayer.Concrete
@model List<Skill>
<div class="section px-3 px-lg-4 pt-5" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Yeteneklerim</h2>
        </div>
        <div class="text-center">
            <p class="mx-auto mb-3" style="max-width:600px">Tiyatro oyunları, filmler ve reklamlar gibi çeşitli prodüksiyonlarda çalışma deneyimi.Seyirciyi etkileme ve rolün duygusal derinliğini aktarma yeteneği.</p>
        </div>
        <div class="bg-light p-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    var count = Model.Count();
                    Console.WriteLine(count.ToString());
                    @if (count >= 4)
                    {
                        <div class="col-md-6">
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>@item.Value</span></div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="@item.Value" data-aos-anchor=".skills-section" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6 offset-md-2">
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>@item.Value</span></div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="@item.Value" data-aos-anchor=".skills-section" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    }

                }
                @*@foreach (var item in Model)
                {
                    <div class="col-md-5">
                    <div class="py-1">
                        <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>@item.Value%</span></div>
                        <div class="progress my-1">
                            <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    
                </div>
                }*@
            </div>
        </div>
    </div>
</div>
